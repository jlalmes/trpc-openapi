{
  "compilerOptions": {
    "outDir": "dist",
    "target": "ES2017",
    "module": "commonjs",
    "strict": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "skipLibCheck": true,
    "allowJs": true,
    "checkJs": false,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "removeComments": false,
    "noUncheckedIndexedAccess": true
  },
  "include": ["src", "test"]
}
